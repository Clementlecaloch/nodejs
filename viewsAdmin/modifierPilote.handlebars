<h1>Modifier un pilote</h1>
<form action="#" method="post" enctype="multipart/form-data">
    <label>Prénom</label>
    <input name="PILPRENOM" type="text" value="{{{pilote.pilprenom}}}">
    <label>Nom</label>
    <input name="PILNOM" type="text" value="{{{pilote.pilnom}}}">
    <label>Date de naissance</label>
    <input name="PILDATENAIS" type="date" value={{formatDate pilote.pildatenais 'YYYY-MM-DD'}}>
    <label>Nationalité</label>
    <select name="PAYNUM">
        {{#each nationalite}}
            <option value="{{{this.paynum}}}" >{{this.paynat}}</option>
        {{/each}}
    </select>
    <label>Ecurie</label>
    <select name="ECUNUM">
        <option value="NULL">Pas d'écurie</option>
        {{#each ecurie}}
            <option value="{{{this.ecunum}}}">{{this.ecunom}}</option>
        {{/each}}
    </select>
    <label>Points</label>
    <input name="PILPOINTS" type="number" value="{{{pilote.pilpoints}}}">
    <label>Poids</label>
    <input name="PILPOIDS" type="number" value="{{{pilote.pilpoids}}}">
    <label>Taille</label>
    <input name="PILTAILLE" type="number" value="{{{pilote.piltaille}}}">
    <label >Image officielle</label>
    <input type="file" name="foo">
    <label>Description</label>
    <textarea name="PILTEXTE" id="PILTEXTE" cols="30" rows="10">{{{pilote.piltexte}}}</textarea>
    <label class="display-none">ID</label>
    <input name="id" class="display-none" type="text" value="{{{pilote.pilnum}}}">
    <input class="valider" type="submit" value="Modifier">
</form>
