<h1>Ajouter un pilote</h1>
<form action="#" method="post">
    <label>Prénom</label>
    <input name="PILPRENOM" type="text">
    <label>Nom</label>
    <input name="PILNOM" type="text">
    <label>Date de naissance</label>
    <input name="PILDATENAIS" type="date">
    <label>Nationalité</label>
    <select name="PAYNUM">
        {{#each nationalite}}
            <option value="{{{this.paynum}}}">{{this.paynat}}</option>
        {{/each}}
    </select>
    <label>Ecurie</label>
    <select name="ECUNUM">
      <option>Pas d'écurie</option>
        {{#each ecurie}}
            <option value="{{{this.ecunum}}}">{{this.ecunom}}</option>
        {{/each}}
    </select>
    <label>Points</label>
    <input name="PILPOINTS" type="number">
    <label>Poids</label>
    <input name="PILPOIDS" type="number">
    <label>Taille</label>
    <input name="PILTAILLE" type="number">
    <label >Image officielle</label>
    <input type="file" name="PHOADRESSE">
    <label>Description</label>
    <textarea name="PILTEXTE" id="" cols="30" rows="10"></textarea>
    <input class="valider" type="submit" value="Ajouter">
</form>
