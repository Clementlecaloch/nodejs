<div class="center">
    <img src="/image/cat_ecurie.png" alt="">
    <h1>Gestion des ecuries</h1>
    <div>
        <img src="/image/act_add.png" alt=""><a href="/ajouterEcurie">Ajouter un ecurie</a>
    </div>
    <table>
        <tr>
            <th>Nom</th>
            <th>Directeur</th>
            <th>Points</th>
            <th>Actions</th>
        </tr>
        {{#each listeEcurie}}
            <tr>
                <td>{{this.ecunom}}</td>
                <td>{{this.ecunomdir}}</td>
                <td> {{#if this.ecupoints}} {{this.ecupoints}} {{else}} 0 {{/if}}</td>
                <td><img src="/image/act_edit.png" alt=""><a href="/modifierEcurie/{{{this.ecunum}}}">Modifier</a> <img src="/image/act_delete.png" alt=""><a href="/supprimerEcurie/{{{this.ecunum}}}">Supprimer</a></td>
            </tr>
        {{/each}}
    </table>
</div>
