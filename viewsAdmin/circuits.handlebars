<div class="center">
    <img src="/image/cat_circuit.png" alt="">
    <h1>Gestion des circuits</h1>
    <div>
        <img src="/image/act_add.png" alt=""><a href="/ajouterCircuit">Ajouter un circuit</a>
    </div>
    <table>
        <tr>
            <th>Nom</th>
            <th>Longueur</th>
            <th>Nombre de Spectateurs</th>
            <th>Actions</th>
        </tr>
        {{#each listeCircuit}}
            <tr>
                <td>{{this.cirnom}}</td>
                <td>{{this.cirlongueur}} m</td>
                <td>{{this.cirnbspectateurs}}</td>
                <td><img src="/image/act_edit.png" alt=""><a href="/modifierCircuit/{{{this.cirnum}}}">Modifier</a> <img src="/image/act_delete.png" alt=""><a href="/supprimerCircuit/{{{this.cirnum}}}">Supprimer</a></td>
            </tr>
        {{/each}}
    </table>
</div>
